<div class="card">
  <h4 class="card-header text-primary">Order Summary</h4>
  <div class="card-body">
   <div class='row'>
      <div class='col-8'>
        <table class='table table-striped  table-hover'>
          <thead >
            <tr>
              <th > Prodcut</th>
              <th > Unit Price</th>
              <th > Quantity</th>
              <th > Price</th>
              <th > Action</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class='col-4'>  
        <label class= 'required no-transform label'> Promo Code </label><br/> 
        <div class='form-inline'>
          <%= text_field 'PromoCode', nil, class: 'form-control', autofocus: true, required: true %>
          <button class=" btn btn-primary float-right"> Apply </button>
        </div><br/>
        <div class='row'>
          <div class='col'>
            <label class= 'required no-transform label'> Total items </label><br/>
          </div> 
          <div class='col'>
            <label class= 'required no-transform label '> $70 </label><br/>
          </div>
        </div>
      </div>
    </div> 
      <button id='checkout-btn' class="Actions btn btn-primary float-right">Proceed to Checkout</button>
  </div>
</div>
<br/>
<%= form_with(model: @order,url: [:user, @order], local: true) do |form| %>
<%= render '/shared/error_msg', resource: @order %>
<div id="customer-info-card" style="display: none ">
  <div class="card display-none">
    <h4 class="card-header text-primary">Customer Information</h4>
    <div class="card-body">
      <div class='parsley-form'>
        <div class='row'>
          <div class='col'>
            <%= form.label :firstname , 'First Name', class: 'required no-transform label' %><br/> 
            <%= form.text_field :firstname, class: 'form-control ', autofocus: true, required: true %>
          </div>
          <div class='col'> 
            <%= form.label :lastname , 'Last Name', class: 'required no-transform label' %><br/> 
            <%= form.text_field :lastname, class: 'form-control ', autofocus: true, required: true %>
          </div>
        </div> 
        <div class='row'>
          <div class='col'>
            <%= form.label :email , 'Email', class: 'required no-transform label' %><br/> 
            <%= form.email_field :email, class: 'form-control ', autofocus: true, required: true %>
          </div>
          <div class='col'>   
            <%= form.label :address , 'Address', class: 'required no-transform label' %><br/> 
            <%= form.text_field :address, class: 'form-control ', autofocus: true, required: true %>
          </div>
        </div> 
      </div><br/>
        <button id='customer-info-btn' class=" Actions btn btn-primary float-right">Continue</button>
    </div>
  </div>
</div>
<br/>
<div id="payment-card" style="display: none">
  <div class="card">
    <h4 class="card-header text-primary">Payment Information</h4>
    <div class="card-body">
      <h5 class="card-title">Please select your payment method below:</h5>
        <div class='row'>
          <div class="col">
            <%= form.radio_button :payment_method, 'check', checked: false, required: true %> Check 
          </div>  
          <div class="col">
            <%= form.radio_button :payment_method, 'cash on delivery', checked: false, required: true%> Cash on delivery
          </div>
        </div>
        <div class='actions'>
          <%= form.submit 'Continue', class: 'btn btn-primary float-right', data: { confirm: 'Confirm Order?' }%>
        </div>   
    </div>
  </div>
</div>
<br/>
<% end %>
