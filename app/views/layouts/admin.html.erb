<!DOCTYPE html>
<html>
  <head>
    <title>Fintech</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class='row'>
      <div class='col-2'>
        <nav class='flex-fill  navbar navbar-light bg-primary'>

          <%= link_to root_path, class: 'bg-primary' do %>
            <li class='nav-item bg-primary text-center'>
            <img src='/assets/logo2.png' width='50' height='50'>
            <hr/></li>
          <% end %>
          <%= link_to admin_subscriptions_path, class: 'bg-primary' do %>
            <li class='nav-item bg-primary text-center'>
            <%= image_tag ('users.png') %><br/>
            <label class='bg-primary text-white'> Subscriptions</label>
            <hr/></li>
          <% end %>
          <%= link_to admin_users_path, class: 'bg-primary' do %>
            <li class='nav-item bg-primary text-center'>
            <%= image_tag ('users.png') %><br/>
            <label class='bg-primary text-white'> Users</label>
            <hr/></li>
          <% end %>
          <%= link_to admin_products_path, class: 'bg-primary' do %>
            <li class ='nav-item bg-primary text-center'>
            <%= image_tag ('products.png'), class: 'bg-primary' %><br/>
            <label class='bg-primary text-white'> Products</label>
            <hr/></li>
            <% end %>
          <%= link_to admin_categories_path, class: 'bg-primary' do %>
            <li class ='nav-item bg-primary text-center'>
            <%= image_tag ('category.png'), class: 'bg-primary' %><br/>
            <label class='bg-primary text-white'> Categories</label>
            <hr/></li>
          <% end %>
          <%= link_to admin_coupons_path, class:'bg-primary' do %>
            <li class ='nav-item bg-primary text-center'>
            <%= image_tag ('coupons.png'), class: 'bg-primary' %><br/>
            <label class='bg-primary text-white'> Cupons</label>
            <hr/></li>
          <% end %>
          <br/><label class='bg-primary text-white' style='margin-top: 60px; font-size: 12px;'> Â© Copyright 2020 FinTech Inc</label>
        </nav>
      </div>

      <div class='col-9'>
        <div class='container'><br/>
          <%= link_to 'Signout', destroy_user_session_path, class: 'btn btn-primary float-right' , method: :delete %>
          <hr class='mt-5'/>
          <%= render 'layouts/alerts' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>

