<div>
  <nav class= 'navbar navbar-light bg-dark' >
    <%= link_to 'Fintech', '#', class: 'navbar navbar-light bg-primary text-white nav-link' %>
    <%= link_to 'Users', '#' , class: 'navbar navbar-light bg-primary text-white nav-link' %>
    <%= link_to 'Subscriptions', '#', class: 'navbar navbar-light bg-primary text-white nav-link' %>
    <%= link_to 'Products', '#', class: 'navbar navbar-light bg-primary text-white nav-link' %>
    <%= link_to 'My Profile', [:admin, current_user], class: 'navbar navbar-light bg-primary text-white nav-link' %>
    <div class= 'form-inline' >
      <%= form_with method: :get, local: true do |f| %>
      <%= f.text_field :search,value: params[:search] %>
      <%= f.submit 'search' %>
      <% end %>
    </div>
  </nav>
<div>
  <h1>Hello admin</h1>
  <h2>Displaying Square63 clients</h2>
  <table class= 'table table-dark' >
    <thead>
      <tr>
        <th> <%= sortable 'id' %> </th>
        <th> <%= sortable 'username' %> </th>
        <th> <%= sortable 'email' %> </th>
        <th> <%= sortable 'role' %> </th>
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
        <tr>
          <th scope= 'row' >
            <%= user.id %>
          </th>
  	      <td>
            <%= user.username %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= User::ROLES[:client] %>
          </td>
  	      <td>
  	      	<%= link_to 'Show ', [:admin, user], class: 'btn btn-primary' %>
  	        <%= link_to 'Edit ', [:edit, :admin, user], class: 'btn btn-primary' %>
  	        <%= link_to 'Delete ', [:admin, user], class: 'btn btn-primary' , data: {confirm: 'Are you sure?'},
              method: :delete %>
  	      </td>
      	</tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Signout', destroy_user_session_path, class: 'btn btn-primary' , method: :delete %>
</div>
