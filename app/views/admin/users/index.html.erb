<div>
  <nav class="navbar navbar-light bg-dark">
    <a class="navbar navbar-light bg-primary text-white">Fintech </a>
    <a class="navbar navbar-light bg-primary text-white nav-link" href="#">Users <span class="sr-only">(current) </span> </a>
    <a class="navbar navbar-light bg-primary text-white nav-link" href="#">Subscriptions </a>
    <a class="navbar navbar-light bg-primary text-white nav-link" href="#">Products </a>
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-primary bg-primary text-white" type="submit">Search </button>
    </form>
  </nav>
<div>
  <h1>Hello admin</h1>
  <h2>Displaying Square63 clients</h2>
  <table class="table table-dark ">
    <thead>
      <tr>
        <th> # </th>
        <th> Name </th>
        <th> Email </th>
        <th> Role </th>
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
        <tr>
          <th scope="row">
            <%= user.id %>
          </th>
  	      <td>
            <%= user.firstname %>
            <%= user.lastname %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= User::ROLES[:client] %>
          </td>
  	      <td>
  	      	<%= link_to "Show ", [:admin, user], class: 'btn btn-primary' %>
  	        <%= link_to "Edit ", [:edit, :admin, user], class: 'btn btn-primary' %>
  	        <%= link_to "Delete ", [:admin, user], class: 'btn btn-primary' , data: {confirm: "Are you sure?"}, method:  :delete %>
  	      </td>
      	</tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Signout', destroy_user_session_path, class: 'btn btn-primary' , method: 'delete' %>
</div>
