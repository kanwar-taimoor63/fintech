  <h2>Clients</h2>
  <table class= 'table table-striped table-bordered table-hover' >
    <thead class= 'bg-primary text-white'>
      <tr>
        <th> ID </th>
        <th> Name </th>
        <th> Email </th>
        <th> Role </th>
        <th colspan="3"> Actions </th>
      </tr>
    </thead>
    <tbody>
    	<% @users.each do |user| %>
        <tr>
          <th scope= 'row' >
            <%= user.id %>
          </th>
  	      <td>
            <%= user.firstname %>
            <%= user.lastname %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= User::ROLES[:client] %>
          </td>
  	      <td>
  	      	<%= link_to 'Show', [:admin, user], class: 'btn btn-primary' %>
  	        <%= link_to 'Edit', [:edit, :admin, user], class: 'btn btn-primary' %>
  	        <%= link_to 'Delete', [:admin, user], class: 'btn btn-primary', data: {confirm: 'Are you sure?'}, method: :delete %>
  	      </td>
      	</tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Signout', destroy_user_session_path, class: 'btn btn-primary' , method: :delete %><br/>

