<p>
  <%= link_to "Back", admin_users_path , class: 'btn btn-primary' %>
</p>
<h1> Edit User </h1>
<div class = "row" >
  <div class = "col-md-6">
    <%= form_for( [:admin, @user], html: { method: :put }) do |form| %>
      <div class= 'form-group' >
        <%= form.label :name, 'Firstname', class: 'label' %><br/>
        <%= form.text_field :firstname, class: 'form-control col-md-6', placeholder: 'First Name'%><br/>
        <%= form.label :name, 'Lastname', class: 'label' %><br/>
        <%= form.text_field :lastname, class: 'form-control col-md-6', placeholder: 'Last Name' %><br/>
        <%= form.label :email, 'Email', class: 'label' %><br/>
        <%= form.email_field :email, autocomplete: 'email', class: 'form-control col-md-6', placeholder: 'Email',
         required: true %> <br/>
         <%= form.label :password, 'Password', class: 'label' %><br/>
         <%= form.password_field :password, autocomplete: 'new-password', id: 'password', class: 'form-control col-md-6', placeholder: 'Password'%>
              <label class= 'less-imp-label' >Hint: The password should be at least eight characters long. To make it stronger, use upper and lower case letters, numbers, and symbols like ! " ? $ % ^ & ).</label><br/>
              <%= form.label :password_confirmation, 'Confirm Password', class: 'label' %><br/>
              <%= form.password_field :password_confirmation, id: 'confirm_password', autocomplete: 'new-password', class: 'form-control col-md-6',
          placeholder: 'Confirm Password' %><br/>
          <div id='message'>
          </div>
      </div>
      <div class= 'actions text-center' >
        <%= form.submit 'Edit User', id: 'submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
