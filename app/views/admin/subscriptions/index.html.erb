


<div class='text-center'>
    <table class='table table-striped table-bordered table-hover'>
      <thead class='bg-primary text-white'>
        <tr>
          <th > Order id </th>
          <th > Customer id </th>
          <th > Name </th>
          <th > Email </th>
          <th colspan='2'> Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders.empty? %>
          <p class='alert alert-danger text-center'>No products to show</p>
          <% else %>
            <% @orders.each do |order| %>
              <tr>
              <td><%= order.id %></td>
              <td><%= order.user_id %></td>
              <td><%= order.firstname %> <%=  order.lastname %></td>
              <td><%= order.email %></td>
              <td>
                <%= link_to 'Show', admin_subscription_path(order) , class: 'btn btn-primary' %>
                <%#= link_to 'Edit', [:edit, :admin, product], class: 'btn btn-primary' %>
                <%= link_to 'Destroy', admin_subscription_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
              </td>
            </tr>
            <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

